""" Nestor's .vimrc (based on phuzz.org)

set nocompatible    " use vim defaults
set ls=2            " always show status line
set history=50      " remember 50 most recent commands
set ruler           " show cursor position
set showcmd         " display incomplete commands
set incsearch       " do incremental searching
"set hlsearch        " highlight searches
set showmatch       " show matching bracket
filetype on         " enable filetype detection
syntax on           " enable syntax highlighting
set softtabstop=2   " number of spaces for each tab
set shiftwidth=2    " number of spaces for each step of indent
set expandtab       " number of spaces to insert a tab
